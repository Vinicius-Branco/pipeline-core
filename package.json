{
  "name": "pipeline-core",
  "version": "1.3.0",
  "description": "A TypeScript library for managing complex data processing pipelines with advanced error handling and parallel processing capabilities",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "commonjs",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src/services/__tests__/unit",
    "test:integration": "jest  --testPathPattern=src/services/__tests__/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mutation": "stryker run",
    "test:mutation:unit": "stryker run stryker.unit.conf.mjs",
    "test:mutation:integration": "stryker run stryker.integration.conf.mjs",
    "test:mutation:all": "stryker run stryker.conf.mjs",
    "test:mutation:preview": "stryker run --reporters clear-text --concurrency 1",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test:unit && npm run test:integration",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vinicius-Branco/pipeline-core.git"
  },
  "keywords": [
    "pipeline",
    "typescript",
    "node",
    "async",
    "processing",
    "worker",
    "parallel",
    "error-handling"
  ],
  "author": "Vinicius Oliveira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Vinicius-Branco/pipeline-core/issues"
  },
  "homepage": "https://github.com/Vinicius-Branco/pipeline-core#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/jest-runner": "^9.0.1",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "esbuild": "^0.25.4"
  }
}
